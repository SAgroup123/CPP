#include<iostream>
#include<cmath>
using namespace std;

float add(float a, float b)
{
	cout<<"Enter first number: ";
cin>>a;	
cout<<"Enter second number: ";
cin>>b;
	float c=a+b;
	cout<<"Adition of "<<a<<" and "<<b<<" is: "<<c;
	return c;
	
}

float sub(float a, float b)
{
	cout<<"Enter first number: ";
cin>>a;	
cout<<"Enter second number: ";
cin>>b;	
		float c=a-b;
		cout<<"Subtraction of "<<a<<" and "<<b<<" is: "<<c;
	return c;

}

float div(float a, float b)
{
	cout<<"Enter first number: ";
cin>>a;	
cout<<"Enter second number: ";
cin>>b;	
		float c=a/b;
		cout<<"Division of "<<a<<" and "<<b<<" is: "<<c;
	return c;
}
float mul(float a, float b)
{
	cout<<"Enter first number: ";
cin>>a;	
cout<<"Enter second number: ";
cin>>b;	
		float c=a*b;
		cout<<"Multiplication of "<<a<<" and "<<b<<" is: "<<c;
	return c;
}
int modd(int a)
{
	cout<<"Enter number(integer): ";
    cin>>a;	
		int c=(a%10);
		cout<<"Modulus of "<<a<<" is: "<<c;
	    return c;
}
double power(float a, float b)
{
	
		cout<<"Enter Base number: ";
cin>>a;	
	cout<<"Enter Exponent number: ";
cin>>b;	
		double c=pow(a,b);
		cout<<"Aswer of "<<a<<"^"<<b<<" is: "<<c;
	return c;
}

int factorial(int a)
{
	cout<<"Enter number (Integer): ";
   cin>>a;
   if(a>0)
   {
   		int fact=1;
   	for(int i=a;i>=1;i--)
   	{
   		fact =fact* i;

	}
	cout<<"The factorial of "<<a<<" is: "<<fact;
   }
   else
   cout << "Factorial is not defined for negative numbers!" << endl;
   //return fact;
}

int fact(int a)
{
		cout<<"Enter number (Integer): ";
cin>>a;	
	cout<<"The factors of "<<a<<" are: ";	
	for(int i=1;i<=a;i++)
	{
	if(a%i==0)
	{
		cout<<i<<" ";
	}
	}
}

int main()
{
	char a,b;
 cout << "Enter operator: \n"
         << " + For addition.\n"
         << " - For subtraction.\n"
         << " / For division.\n"
         << " * For multiplication.\n"
         << " % For modulus.\n"
         << " ^ For power.\n"
         << " ! For factorial.\n"
         << " f For factors.\n";
    cin >> a;
switch(a)
{
	case  '+':
	{
		add(a,b);	
		break;
	}
		case  '-':
	{
		sub(a,b);	
		break;
	}
		case  '/':
	{
		div(a,b);	
		break;
	}
		case  '*':
	{
		mul(a,b);	
		break;
	}
		case  '%':
	{
		modd(a);	
		break;
	}
		case  '^':
	{
		power(a,b);	
		break;
	}
	
		case  '!':
	{
		factorial(a);	
		break;
	}
		case  'f':
	{
		fact(a);	
		break;
	}
	default: {

	cout<<"Sorry! Wrong entry. ";
}
}
}
